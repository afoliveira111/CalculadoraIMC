<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/rounded_toolbar"
        app:titleTextColor="@color/white"
        app:title="Calcule seu IMC"        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Informe seus dados:"
        android:layout_marginVertical="80dp"
        android:layout_marginStart="19dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edittext_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu peso:"
        android:inputType="numberDecimal"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="150dp"
        android:textColorHint="@color/black"
        android:maxLength="6" />



    <EditText
        android:id="@+id/edittext_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="190dp"
        android:layout_below="@+id/edittext_peso"
        android:textColorHint="@color/black"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/black"
        android:hint="Digite sua altura:"
        android:inputType="numberDecimal"
        android:maxLength="6" />


    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#2F492C"
        android:textColor="@color/white"
        android:text="Calcular" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@android:dimen/app_icon_size"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_marginEnd="@android:dimen/app_icon_size"
        android:layout_marginBottom="@android:dimen/app_icon_size"
        android:src="@drawable/balance2" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>

