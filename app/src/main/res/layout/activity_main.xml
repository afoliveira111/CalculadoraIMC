<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".MainActivity" >


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:background="#2F492C" />


    <EditText
        android:id="@+id/edittext_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu peso:"
        android:inputType="numberDecimal"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="80dp"
        android:textColorHint="@color/black"
        android:maxLength="6" />



    <EditText
        android:id="@+id/edittext_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="120dp"
        android:layout_below="@+id/edittext_peso"
        android:textColorHint="@color/black"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/black"
        android:hint="Digite sua altura:"
        android:inputType="numberDecimal"
        android:maxLength="6" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_gravity="bottom"
        android:layout_marginVertical="150dp"
        android:layout_marginStart="@android:dimen/app_icon_size"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_marginEnd="@android:dimen/app_icon_size"
        android:layout_marginBottom="@android:dimen/app_icon_size"
        android:src="@drawable/balance2" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#2F492C"
        android:textColor="@color/white"
        android:text="Calcular" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>

